<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
      <bean class="com.crrcdt.ioc.model.User" id="user">
<!--       通过构造方法实现书信注解     -->
            <constructor-arg name="name" value="lj"/>
            <constructor-arg name="pwd" value="aaa"/>
      </bean>
<!--    通过property属性注入-->
      <bean class="com.crrcdt.ioc.model.User" id="user2">
            <property name="name" value="dashuai"/>
            <property name="pwd" value="afi"/>
      </bean>
<!--    通过名称空间注入-->
    <bean class="com.crrcdt.ioc.model.User" id="user3" p:pwd="aaaa" p:name="ad"/>

<!--    复杂属性注入-->
    <bean class="com.crrcdt.ioc.model.User" id="user4">
        <property name="pwd" value="123"/>
        <property name="name" value="慌"/>
        <property name="cat" ref="cat" />
    </bean>
    <bean class="com.crrcdt.ioc.model.Cat" id="cat" >
        <property name="name" value="小白"/>
        <property name="age" value="3"/>
    </bean>
</beans>